<div class="column is-three-quarters">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x">
          <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </p>
      </figure>
      <div class="media-content">
        <%= render "posts/form" %>
      </div>
    </article>
  <% end %>

  <% @posts.each do | post | %>
    <div class="column">
      <article class="media box">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(post.user.email, size: 64, alt: post.user.name) %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= post.user.name %></strong>
            <p><%= post.post %></p>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <% if post.user == current_user %>
                <%= link_to edit_post_path(post), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?"} do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              <% end %>
            </div>
            <% if user_signed_in? %>
              <% if post.comments %>
                <div class="content">
                  <%= post.comments.each do |comment| %>
                    <div class="comment">
                      <div class="user-name">
                        <%= comment.user.name %>
                      </div>
                      <div class="comment-content">
                        <%= comment.content %>
                      </div>
                      <% if comment.user == current_user %>
                        <%= link_to post_comment_path(post, comment), method: :delete, data: {confirm: "Delete comment?"} %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
              <div class="comment-form">
                <%= form_for [post, post.comments.new] do |f| %>
                  <%= f.text_field :content, placeholder: "Add a comment" %>
                <% end %>
              </div>
            <% end %>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>